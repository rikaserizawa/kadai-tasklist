<ul class="media-list">
  <% tasks.each do |task| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(task.member, options = { size: 30 }) %>" alt="Noimage">
      </div>
      <div class="media-body">
        <div>
          <%= link_to task.member.name, member_path(task.member) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p><%= task.content %></p>
          <p><%= task.status %></p>
        </div>
        <div>
        <% if current_member == task.member %>
        <%= link_to "Edit", task, muted: :edit, data: { confirm: "編集する" }, class: 'btn btn-primary btn-xs' %>
        <%= link_to "Delete", task, method: :delete, data: { confirm: "消去しますか?" }, class: 'btn btn-danger btn-xs' %>
        <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>
