<% if members.any? %>
  <ul class="media-list">
    <% members.each do |member| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(member, { size: 50 }) %>" alt="Noimage">
        </div>
        <div class="media-body">
          <div>
            <%= member.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', member_path(member) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate members %>
<% end %>