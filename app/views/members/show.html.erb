<div class="row">
  <aside class="col-xs-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @member.name %></h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@member, { size: 100 }) %>" alt="Noimage">
        <p>所属:<%= @member.profile %> </p>
      
      </div>
    </div>
  </aside>
  <div class="col-xs-4">
    <ul class="nav nav-tabs nav-justified">
      <li class="
        <%= 'active' if current_page?(member_path(@member)) %>
        ">
        <%= link_to member_path(@member) do %>
        TasksList <span class="badge">
        <%= @count_tasks %></span>
        <% end %>
        <%= render 'tasks/tasks', tasks: @tasks %>
      </li>
    </ul>
  </div>
</div>
