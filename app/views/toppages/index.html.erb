<% if logged_in? %>
<p>ログイン中メンバー: <%= current_member.name %>さん</p>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
          <%= f.select :status, [["着手前", "着手前"], ["進行中", "進行中"], ["完了", "完了"], ["回答待ち", "回答待ち"]], class:'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>

<% else %>


<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the TasksList</h1>
    <%= link_to '新規メンバー登録をする!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>